          </div>

          <!-- Pagination -->
          <div class="pagination">
            <button class="pagination-btn" disabled><i class="bi bi-chevron-left"></i></button>
            <button class="pagination-btn active">1</button>
            <button class="pagination-btn">2</button>
            <button class="pagination-btn">3</button>
            <button class="pagination-btn"><i class="bi bi-chevron-right"></i></button>
          </div>
        </section>

        <!-- Reports Section -->
        <section id="reports" class="admin-section">
          <div class="admin-header">
            <h1>Reports & Analytics</h1>
            <p>View detailed reports and analytics for your properties.</p>
          </div>

          <!-- Report Filters -->
          <div class="filters-container">
            <div class="filter-group">
              <label for="report-type">Report Type</label>
              <select id="report-type">
                <option value="revenue">Revenue</option>
                <option value="occupancy">Occupancy</option>
                <option value="guest">Guest Demographics</option>
                <option value="performance">Performance</option>
              </select>
            </div>
            <div class="filter-group">
              <label for="report-location">Location</label>
              <select id="report-location">
                <option value="all">All Locations</option>
                <option value="new-york">New York</option>
                <option value="paris">Paris</option>
                <option value="dubai">Dubai</option>
                <option value="tokyo">Tokyo</option>
                <option value="sydney">Sydney</option>
                <option value="maldives">Maldives</option>
              </select>
            </div>
            <div class="filter-group">
              <label for="report-period">Time Period</label>
              <select id="report-period">
                <option value="this-month">This Month</option>
                <option value="last-month">Last Month</option>
                <option value="this-quarter">This Quarter</option>
                <option value="last-quarter">Last Quarter</option>
                <option value="this-year">This Year</option>
                <option value="last-year">Last Year</option>
                <option value="custom">Custom Range</option>
              </select>
            </div>
            <div class="filter-actions">
              <button class="btn btn-primary"><i class="bi bi-download"></i> Export Report</button>
            </div>
          </div>

          <!-- Report Charts -->
          <div class="charts-container">
            <div class="chart-card full-width">
              <div class="chart-header">
                <h3>Revenue by Location</h3>
              </div>
              <div class="chart-body">
                <canvas id="revenueByLocationChart"></canvas>
              </div>
            </div>
            <div class="chart-card">
              <div class="chart-header">
                <h3>Room Type Distribution</h3>
              </div>
              <div class="chart-body">
                <canvas id="roomTypeChart"></canvas>
              </div>
            </div>
            <div class="chart-card">
              <div class="chart-header">
                <h3>Booking Source</h3>
              </div>
              <div class="chart-body">
                <canvas id="bookingSourceChart"></canvas>
              </div>
            </div>
          </div>

          <!-- Key Metrics -->
          <div class="metrics-container">
            <div class="section-header">
              <h3>Key Performance Metrics</h3>
            </div>
            <div class="metrics-grid">
              <div class="metric-card">
                <div class="metric-title">Average Daily Rate (ADR)</div>
                <div class="metric-value">$425</div>
                <div class="metric-change positive">+5.2% vs. last period</div>
              </div>
              <div class="metric-card">
                <div class="metric-title">RevPAR</div>
                <div class="metric-value">$361</div>
                <div class="metric-change positive">+3.8% vs. last period</div>
              </div>
              <div class="metric-card">
                <div class="metric-title">Average Length of Stay</div>
                <div class="metric-value">3.2 days</div>
                <div class="metric-change negative">-0.3 days vs. last period</div>
              </div>
              <div class="metric-card">
                <div class="metric-title">Cancellation Rate</div>
                <div class="metric-value">4.7%</div>
                <div class="metric-change positive">-0.5% vs. last period</div>
              </div>
              <div class="metric-card">
                <div class="metric-title">Direct Booking %</div>
                <div class="metric-value">62%</div>
                <div class="metric-change positive">+3% vs. last period</div>
              </div>
              <div class="metric-card">
                <div class="metric-title">Repeat Guest %</div>
                <div class="metric-value">28%</div>
                <div class="metric-change positive">+2% vs. last period</div>
              </div>
            </div>
          </div>
        </section>

        <!-- Settings Section -->
        <section id="settings" class="admin-section">
          <div class="admin-header">
            <h1>System Settings</h1>
            <p>Configure system settings and preferences.</p>
          </div>

          <div class="settings-container">
            <!-- General Settings -->
            <div class="settings-card">
              <div class="settings-header">
                <h3>General Settings</h3>
              </div>
              <div class="settings-body">
                <form class="settings-form">
                  <div class="form-group">
                    <label for="site-name">Hotel Name</label>
                    <input type="text" id="site-name" value="Elara Regency" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="contact-email">Contact Email</label>
                    <input type="email" id="contact-email" value="info@elararegency.com" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="contact-phone">Contact Phone</label>
                    <input type="tel" id="contact-phone" value="+1 (555) 123-4567" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="currency">Default Currency</label>
                    <select id="currency" class="form-control">
                      <option value="USD" selected>USD ($)</option>
                      <option value="EUR">EUR (€)</option>
                      <option value="GBP">GBP (£)</option>
                      <option value="JPY">JPY (¥)</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="timezone">Default Timezone</label>
                    <select id="timezone" class="form-control">
                      <option value="America/New_York" selected>Eastern Time (ET)</option>
                      <option value="America/Chicago">Central Time (CT)</option>
                      <option value="America/Denver">Mountain Time (MT)</option>
                      <option value="America/Los_Angeles">Pacific Time (PT)</option>
                      <option value="Europe/London">Greenwich Mean Time (GMT)</option>
                      <option value="Europe/Paris">Central European Time (CET)</option>
                      <option value="Asia/Tokyo">Japan Standard Time (JST)</option>
                    </select>
                  </div>
                  <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                  </div>
                </form>
              </div>
            </div>

            <!-- Booking Settings -->
            <div class="settings-card">
              <div class="settings-header">
                <h3>Booking Settings</h3>
              </div>
              <div class="settings-body">
                <form class="settings-form">
                  <div class="form-group">
                    <label for="check-in-time">Default Check-in Time</label>
                    <input type="time" id="check-in-time" value="15:00" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="check-out-time">Default Check-out Time</label>
                    <input type="time" id="check-out-time" value="12:00" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="min-advance-booking">Minimum Advance Booking (days)</label>
                    <input type="number" id="min-advance-booking" value="1" min="0" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="max-advance-booking">Maximum Advance Booking (days)</label>
                    <input type="number" id="max-advance-booking" value="365" min="1" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="cancellation-policy">Default Cancellation Policy</label>
                    <select id="cancellation-policy" class="form-control">
                      <option value="48h" selected>48 hours before check-in</option>
                      <option value="24h">24 hours before check-in</option>
                      <option value="7d">7 days before check-in</option>
                      <option value="non-refundable">Non-refundable</option>
                    </select>
                  </div>
                  <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                  </div>
                </form>
              </div>
            </div>

            <!-- Email Settings -->
            <div class="settings-card">
              <div class="settings-header">
                <h3>Email Notifications</h3>
              </div>
              <div class="settings-body">
                <form class="settings-form">
                  <div class="form-group checkbox">
                    <input type="checkbox" id="email-new-booking" checked>
                    <label for="email-new-booking">New Booking Notifications</label>
                  </div>
                  <div class="form-group checkbox">
                    <input type="checkbox" id="email-booking-confirmation" checked>
                    <label for="email-booking-confirmation">Booking Confirmation to Guests</label>
                  </div>
                  <div class="form-group checkbox">
                    <input type="checkbox" id="email-booking-reminder" checked>
                    <label for="email-booking-reminder">Booking Reminder (24h before)</label>
                  </div>
                  <div class="form-group checkbox">
                    <input type="checkbox" id="email-cancellation" checked>
                    <label for="email-cancellation">Cancellation Notifications</label>
                  </div>
                  <div class="form-group checkbox">
                    <input type="checkbox" id="email-review-request">
                    <label for="email-review-request">Post-stay Review Requests</label>
                  </div>
                  <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                  </div>

                </form>
              </div>
            </div>
          </div>
        </section>
      </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="copyright">
          &copy; <%= new Date().getFullYear() %> Elara Regency. All rights reserved.
        </div>
      </div>
    </footer>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/js/main.js"></script>
  <script type="module" src="/js/admin-dashboard.js"></script>
</body>

</html>