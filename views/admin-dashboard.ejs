              </div>
            </div>
            <div class="filter-actions">
              <button class="btn btn-primary"><i class="bi bi-plus"></i> Add New User</button>
            </div>
          </div>

          <!-- Users Table -->
          <div class="table-responsive">
            <table class="data-table">
              <thead>
                <tr>
                  <th>ID <i class="bi bi-arrow-down-up"></i></th>
                  <th>Name <i class="bi bi-arrow-down-up"></i></th>
                  <th>Email <i class="bi bi-arrow-down-up"></i></th>
                  <th>Role <i class="bi bi-arrow-down-up"></i></th>
                  <th>Status <i class="bi bi-arrow-down-up"></i></th>
                  <th>Registered <i class="bi bi-arrow-down-up"></i></th>
                  <th>Last Login <i class="bi bi-arrow-down-up"></i></th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(user=> { %>
                  <tr>
                    <td>#<%= user.id %>
                    </td>
                    <td>
                      <%= user.name %>
                    </td>
                    <td>
                      <%= user.email %>
                    </td>
                    <td><span class="role <%= user.isAdmin ? 'admin' : 'user' %>">
